<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="fill_parent">
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:id="@+id/formrecord_txt_right" android:layout_alignParentBottom="true"></TextView>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:id="@+id/formrecord_txt_upp_right" android:layout_above="@+id/formrecord_txt_right" android:gravity="right"></TextView>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/formrecord_txt_main" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:gravity="left" android:layout_toLeftOf="@id/formrecord_txt_upp_right"></TextView>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/formrecord_txt_btm" android:layout_below="@+id/formrecord_txt_main"></TextView>
</RelativeLayout>
